<div class="no-head-carousel clearfix">
  <div id="profile" class="container profile-container container-fluid">
    <div class="row-fluid">
      <div class="span8">
        <%= render :partial => "nav" %>
        <div class="profile-content bordered-content">
          <%= render :partial => @partial %>
        </div>
      </div>
      <div class="span3 recommended-projects">
        <h4 class="section-head recommended-projects-title"><%= t("profile.recommended_projects.title") %></h4>
        <ul class="thumbnails">
          <% @projects.each do |project| %>
            <li class="span12">
              <%= link_to project_path(project), :class => "thumbnail" do %>
                <%= image_tag project.thumbnail_small, :size => "188x110" %>
                <p><%= project.headline %></p>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
