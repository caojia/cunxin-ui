<div class="modal hide" id="signin-modal">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3><%= t("signin.title") %></h3>
  </div>

  <div class="modal-body">
    <%= form_for(nil, :as => :user, :url => session_path(:user), :remote => true, :html => {:class => "form-horizontal", :id => "signin-form"}) do |f| %>

      <div class="alert alert-warn hide signin-required-text">
        <%= content_tag :div, t("signin.login_required"), :class => "message" %>
      </div>

      <div class="alert alert-error hide signin-error-message">
        <%= content_tag :div, "", :class => "message" %>
      </div>

      <div class="control-group">
        <%= f.label :email, I18n.t("signin.email"), :class => "control-label" %>
        <div class="controls">
          <%= f.email_field :email, :autofocus => true %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :password, I18n.t("signin.password"), :class => "control-label" %>
        <div class="controls">
          <%= f.password_field :password %>
        </div>
      </div>

      <div class="control-group">
        <div class="controls">
          <label class="checkbox">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, I18n.t("signin.remember_me") %>
          </label>
          <%= f.submit I18n.t("signin.submit"), :class => "signin-button green-button small-button" %>
          <%= link_to sina_connect_path do %>
            <%= image_tag "sina30.png" %>
          <% end %>
          <div>
            <%= link_to t("forgot_password.link"), new_password_path(:user), :class => "gray-link" %>
            <span>&nbsp;</span>
            <%= link_to t("signin.signup_link"), signup_path, :class => "gray-link" %>
          </div>
        </div>
      </div>
    <% end %> 
  </div>
</div>
