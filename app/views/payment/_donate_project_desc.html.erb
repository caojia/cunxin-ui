<div class='project-desc-wrapper' >
  <div class='project-thumbnail'>
    <%= link_to project_path(@project), :title => @project.headline do %>
      <%= image_tag @project.thumbnail_small, :alt => @project.headline %>
      <%= @project.headline %>
    <% end %>
  </div>

  <div class='project-charity'>
    <%= content_tag :span, @project.charity.name %>
  </div>

  <div class='project-progress' >
    <%= content_tag :span, t("payment.progress") %>
    <span class='progress-wrapper'>
      <span class='progress' style="margin-left: 10px; width: 140px">
        <div class='bar' style="width: <%= @project.donated_percentage %>%;">
          <div class='progress-text-container' >
            <%= @project.donated_percentage %>%
          </div>
        </div>
      </span>
    </span>
  </div>

  <% # TODO: use short_description %>
  <%= content_tag :div, truncate(@project.description, :length => 250, :omission => '...'), :class=>'project-desc' %>

  <div style="clear: both;"> </div>
</div>
