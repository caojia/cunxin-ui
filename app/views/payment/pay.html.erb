<%= content_tag :div, @project.id %>
<%= content_tag :div, @donate_amount %>
<%= content_tag :div, @payment_method %>

<%= form_tag(@pay.host, :method => :post, :authenticity_token => false, :id => 'pay-form') do %>
  <% @pay.fields.each_pair do |k, v| %>
    <%= hidden_field_tag k, v %>
  <% end %>
  <%= submit_tag "Submit", :id =>'pay-submit' %>
<% end %>
