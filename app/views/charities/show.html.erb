<div class='show-charity-content'>
  <div class='masterhead'>
    <div class='container'>
      <div id="head-carousel" class="carousel head-carousel">
        <div class="carousel-inner">
          <div class="active item">
            <%= image_tag @charity.thumbnail_large %>
            <div class="carousel-description">
              <%= content_tag :h3, t("charities.introduction") %>
              <%= content_tag :div, @charity.short_description %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div>
    <div class='container'>
      <div class='charity-status'>
        <%= content_tag :span, t("charities.projects_count", :projects_count => number_with_delimiter(@charity.projects.size)) %>
        <%= content_tag :span, t("charities.total_donated", :total_donated => number_to_currency(@total_donated)) %>
      </div>
    </div>
  </div>

  <%= render :partial => "col4_carousel", :locals => {:items => @charity.projects, :key => "project", :gen_link_for_item => lambda { |item| project_path(item) } } %>
</div>

