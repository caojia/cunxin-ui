<div class="forgot-password container static-page no-head-carousel">
  <h2><%= t("change_password.title") %></h2>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <div><%= f.label :password, t("change_password.password") %>
      <%= f.password_field :password, :autofocus => true %>
      <% if !resource.errors.empty? %>
        <div class="text-error control-group controls error-message">
          <%= resource.errors[:password][0] %>
        </div>
      <% end %>
    </div>

    <div><%= f.label :password_confirmation, t("change_password.confirm_password") %>
    <%= f.password_field :password_confirmation %></div>

    <div><%= f.submit t("change_password.submit"), :class => "small-button blue-button" %></div>
  <% end %>

</div>
