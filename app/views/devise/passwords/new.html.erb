<div class="forgot-password container static-page no-head-carousel">
  <h2><%= t("forgot_password.title") %></h2>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
    <div class="control-group <%= !flash[:notice].blank? ? "error" : "" %>">
      <%= f.label :email, t("forgot_password.email") %>
      <%= f.email_field :email, :autofocus => true %>
      <% if !flash[:notice].blank? %>
        <span class="help-inline"><%= flash[:notice] %></span>
      <% end %>
    </div>

    <div><%= f.submit t("forgot_password.submit"), :class => "small-button blue-button" %></div>
  <% end %>
</div>
