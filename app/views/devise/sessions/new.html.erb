<h2><%= I18n.t("signin.title") %></h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
  <div class="control-group">
    <%= f.label :email, I18n.t("signin.email"), :class => "control-label" %>
    <div class="controls">
      <%= f.email_field :email, :autofocus => true %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password, I18n.t("signin.password"), :class => "control-label" %>
    <div class="controls">
      <%= f.password_field :password %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <label class="checkbox">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, I18n.t("signin.remember_me") %>
      </label>
      <%= f.submit I18n.t("signin.submit") %>
    </div>
  </div>

  <div><%= link_to t("forgot_password.link"), new_password_path(:user) %></div>
<% end %> 

<%= render "devise/shared/links" %>
