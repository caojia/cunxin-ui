<div class="project-info">
  <div class="mask opacity5"></div>
  <div class="project-info-content">
    <div class="desc-content" >
      <%= content_tag :h2, @project.headline %>
    </div>

    <div class="desc-content">
      <%= content_tag :div, t("projects.info.countdown"), :class=>"desc-title" %>
      <%= content_tag :div, "", :class => "desc-detail countdown" do %>
        <div id = 'countdown-timer' >
          <%= get_time_left(@project).html_safe %>
        </div>
      <% end %>
    </div>

    <div class="desc-content">
      <%= content_tag :div, t("projects.info.current_amount"), :class=>"desc-title" %>
      <%= content_tag :div, number_to_currency(@project.current_amount), :class => "desc-detail amount-text" %>
    </div>

    <div class="button-content">
      <div class="buttons">
        <%= link_to t("projects.info.donate"), donate_path(:project_id => @project.id),
              :id => "project-donate",
              :class => "blue-button donate-button small-button" %>
        <%= link_to t("projects.info.follow"), follow_path(:id => @project.id),
              :method => :post,
              :remote => true,
              "data-check-following-url" => check_following_path(:id => @project.id),
              :id => "project-follow",
              :class => "green-button small-button" %>
        <%= link_to t("projects.info.following"), "#",
              :id => "project-following",
              :style => "display: none;",
              :class => "dark-green-button small-button hidden disabled" %>
      </div>
    </div>
  </div>
</div>
