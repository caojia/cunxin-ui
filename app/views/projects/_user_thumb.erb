<div class='user-thumb-photo float-left'>
  <% if payment.anonymous %>
    <%= image_tag ProjectsController::DEFAULT_THUMBNAIL_URL, :title => t("projects.user_thumb.anonymous_donate"), :alt => t("projects.user_thumb.anonymous_donate") %>
  <% else %>
    <% if payment.user.sina_oauth_user %>
      <%= link_to payment.user.sina_oauth_user.sina_link, :target => "_blank" do %>
        <%= image_tag payment.user.thumbnail_url, :title => payment.user.name, :alt => payment.user.name %>
      <% end %>
    <% else %>
      <%= image_tag payment.user.thumbnail_url, :title => payment.user.name, :alt => payment.user.name %>
    <% end %>
  <% end %>
</div>
<div class='user-thumb-text float-left'>
  <% if payment.anonymous %>
    <%= content_tag :div, t("projects.user_thumb.anonymous_donate") %>
  <% else %>
    <% if payment.user.sina_oauth_user %>
      <%= link_to payment.user.sina_oauth_user.sina_link, :target => "_blank" do %>
        <%= content_tag :div, payment.user.name %>
      <% end %>
    <% else %>
      <%= content_tag :div, payment.user.name %>
    <% end %>
  <% end %>
  <div>
    <span><%= t("projects.section.donated_amount_label") %></span>
    <span><%= number_to_currency(payment.amount) %></span>
  </div>
</div>
<div class="clearfix"></div>

