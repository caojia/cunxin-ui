<div id="head-carousel" class="carousel head-carousel">
  <div class="carousel-inner">
    <div class="active item cunxin-thumb-large-container">
      <%= image_tag @project.thumbnail_large, :alt => @project.headline %>
    </div>
  </div>
  <div class="project-info-container-positioner">
    <div class="project-info-container">
      <%= render :partial => "info" %>
    </div>
  </div>
</div>

<div class="container project-carousel">
  <%= render :partial => "shared/colx_carousel", :locals => {
        :items => @photos, 
        :path => "projects",
        :key => "photo", 
        :no_title => true,
        :show_caption => false,
        :link_opts_for_item => lambda {|item|
          ["#", {:class => "cunxin-thumb", "data-cunxin-thumb-large-src" => item.thumbnail_large}] },
        :items_per_col => 5 } %>
</div>

<div class="project-description-content">
  <div class="container container-fluid">
    <div class="row-fluid">
      <div class="span7">
        <div>
          <!-- JiaThis Button BEGIN -->
          <div class="jiathis_style">
              <span class="jiathis_txt">分享到：</span>
              <a class="jiathis_button_tsina"></a>
              <a class="jiathis_button_renren"></a>
              <a class="jiathis_button_kaixin001"></a>
              <a class="jiathis_button_douban"></a>
              <a class="jiathis_button_tqq"></a>
              <a href="http://www.jiathis.com/share?uid=89712" class="jiathis jiathis_txt jtico jtico_jiathis" target="_blank"></a>
              <a class="jiathis_counter_style"></a>
          </div>
          <script type="text/javascript">var jiathis_config = {data_track_clickback:true};</script>
          <script type="text/javascript" src="http://v3.jiathis.com/code/jia.js?uid=89712" charset="utf-8"></script>
          <!-- JiaThis Button END -->
        </div>
        <div class="clearfix"></div>
        <%#= content_tag :h2, @project.headline %>
        <%= content_tag :div, :class => 'description' do %>
          <%= image_tag "/projects/1-title.jpg", :class => "title-image", :align => "left" %>
          <%= @project.description.html_safe %>
        <% end %>
      </div>

      <% unless @donated_users.blank? %>
        <div class='donated-users span4 offset1'>
          <%= content_tag :h2, t('projects.donated_users') %>
          <ul>
            <% @donated_users.each do |user| %>
              <li> <%= render :partial => "user_thumb", :locals => { :user => user } %> </li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container project-list-carousel">
  <%= render :partial => "shared/colx_carousel", :locals => {
        :items => @projects, 
        :path => "projects",
        :key => "other_projects", 
        :no_title => false,
        :show_caption => false,
        :items_per_col => 5,
        :link_opts_for_item => lambda {|item| project_path(item) }} %>
</div>
